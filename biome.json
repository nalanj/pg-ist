{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "indentStyle": "space"
  },

  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      },
      "performance": {
        "useTopLevelRegex": "error"
      }
    }
  },
  "files": {
    "ignore": ["package.json"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  }
}
